{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"],

    /* Extras */
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
